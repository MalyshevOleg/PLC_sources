+				__func__, port->data.bus_index, port->data.module_addr);
+		return r;
+	}
+
+	/* translate config */
+#ifdef HPR_SERIAL_TEST2
+	if (port->data.hw_id !=  HPR_HWID_HE5672) {
+		test_update_config(port, &param);
+	} else {
+		he5672_update_config(port, &param);
