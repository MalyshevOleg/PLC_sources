+	b1 = (unsigned char)((l >> 8) & 0xFF);
+	b2 = (unsigned char)((l >> 16) & 0xFF);
+	b3 = (unsigned char)((l >> 24) & 0xFF);
+	return (b0 << 24) | (b1 << 16) | (b2 << 8) | b3;
+#else
+	return l;
+#endif
