+	at91_register_uart(0, 0, 0);
+	
+	/* USART0 on ttyS1. (Rx, Tx only) */
+	at91_register_uart(AT91SAM9263_ID_US0, 1, 0);
+
+	/* USART1 on ttyS2. (Rx, Tx, RTS) - not configured, used by HPR driver */
