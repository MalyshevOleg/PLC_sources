+	if (port->xmit_state.send) {
+		port->out_pab.io16b.pv[0] |= HPR_HE5672_CTL_SEND;
+	}
+	
+	if (port->xmit_state.tr) {
+		port->out_pab.io16b.pv[0] |= HPR_HE5672_CTL_TR;
+	}
